#include <iostream>

using namespace std;

int main()
{
    int opcion, x, y, sumaparcial = 0, promedio, i = 0, nota;
    double r, area, circunferencia;
    do {
        cout << "MENU" << endl;
        cout << "====" << endl;
        cout << "1. Longitud y área de la circunferencia" << endl;
        cout << "2. En qué cuadrante está un punto" << endl;
        cout << "3. Calculo de nota" << endl;
        cout << "0. Salir" << endl;
        
        cout << "Ingrese la opción que desea: " << endl;
        cin >> opcion;
        
        switch (opcion) {
            case 1: {
                    cout << "Ingrese el radio" << endl;
                    cin >> r;
                    cout << "El área del círculo es: " << 3.141516 * r * r;
                    cout << "L longitud es: " << 2 * 3.141516 * r;
                    break;
            }
            case 2: {
    
                    cout << "Ingrese el punto: " << endl;
                    cin >> x >> y;
                    
                    if (x > 0 && y > 0) {
                        cout << "El punto está en el primer cuadrante";
                    } else if (x == 0 && y != 0) {
                        cout << "El punto está sobre el eje y";
                    } else if (y == 0 && x != 0) {
                        cout << "El punto está sobre el eje x";
                    } else if (x < 0 && y > 0) {
                        cout << "El punto está en el segundo cuadrante";
                    } else if (x < 0 && y < 0) {
                        cout << "El punto está en el tercer cuadrante";
                    } else if (x > 0 && y < 0) {
                        cout << "El punto está en el cuarto cuadrante";
                    } else if (x == 0 && y == 0) {
                        cout << "El punto está en el origen";
                    }
                    
                    break;
            }
            case 3: {
                    
                    while (i <= 4) {
                        cout << "Ingrese la nota del parcial: ";
                        cin >> nota;
                        if (nota < 0 || nota > 10) {
                            cout << "Por favor ingrese una nota entre 0 y 10";
                            return 1;
                        }
                        sumaparcial += nota;
                        i += 1;
                    }  
                    
                    promedio = sumaparcial/4;
                    
                    cout << "Su promedio es " << promedio;
                    
                    if (promedio >= 6 && promedio <=10) {
                        cout << "          Aprobado" << endl;
                    } else if (promedio >= 5 && promedio <= 6) {
                        cout << "          Derecho a extraordinario" << endl;
                    } else if (promedio >= 2 && promedio <= 5) {
                        cout << "          Derecho a título" << endl;
                    } else {
                        cout << "          Sin derecho a acreditar" << endl;
                    }
                    break;
            }
            case 0: {
                cout << "Salir";
                break;
            }
            default: {
                cout << "Opción inválida" << endl;
            }
        } 
    } while (opcion != 0);
    return 0;
}
