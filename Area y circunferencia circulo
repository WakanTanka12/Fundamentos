#include <iostream>

using namespace std;

int main()
{
    int r;
    double circunferencia, area;
    
    cout << "Ingrese el radio de la circunferencia: ";
    cin >> r;
    circunferencia = 2 * 3.141592653 * r;
    area = 3.141592653 * r * r;
    cout << "La circunferencia vale " << circunferencia << " y el area " << area;
    
    return 0;
}
