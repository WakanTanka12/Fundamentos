#include <iostream>

using namespace std;

int main()
{
    int num1, num2, num3;
    float prom;
    
    cout<<"Escriba el primer numero: ";
    cin>>num1;
    if (!((num1>=0) && (num1<=10)) )
        cout<<"Escriba numeros entre 0 y 10";
    else {
        cout<<"Escriba el segundo numero: ";
        cin>>num2;
        if (!((num2>=0) && (num2<=10)) )
            cout<<"Escriba numeros entre 0 y 10";
        else {
            cout<<"Escriba el tercer numero: ";
            cin>>num3;
            if (!((num3>=0) && (num3<=10))) 
                cout<<"Escriba numeros entre 0 y 10";
            else { 
                prom = (num1+num2+num3)/3.0;
                cout<<"El promedio es: "<<prom;
            }
        }
    }
    return 0;
}
